!!! 5
%html
	%head
		%title Crowdboarding
		= stylesheet_link_tag 'grid', 'text', 'event', 'user', 'devise', 'formtastic', 'formtastic_changes', 'pepper-grinder/jquery-ui.custom'
		= javascript_include_tag 'jquery.min', 'jquery-ui.custom.min', 'rails.js', 'autocomplete-rails.js', 'application'
		= yield :head
		= csrf_meta_tag
		%meta{:name => "viewport", :content => "initial-scale=1.0, user-scalable=no"}
	%body{:class => "#{show_splash? ? "splash" : ""}"}
		-# #wrapper_notifier
		-# 	#notifier
		-# 		Lorem ipsum dolor sit amet, consectetur adipisicing elit

		#wrapper_header
			#header
				#title
					%h1=link_to content_tag(:span, "Crowdboarding" ), root_path
				#header_info
					%ul
						%li=link_to "Spanish", change_local_path("es")
						%li=link_to "English", change_local_path("en")
						- if user_signed_in?
							%li.highlighted_plus=link_to raw("<span>Add Event</span>"), new_event_path
							%li.small=link_to '(logout)', destroy_user_session_path
							%li= link_to current_user.nickname, user_path(current_user)
							%li.avatar=link_to raw("#{image_tag current_user.avatar(:small), :width => 25, :height => 25}"), user_path(current_user)
						- else
							%li.highlighted= link_to 'Register', new_user_registration_path
							%li= link_to 'Login', new_user_session_url
		- if(!current_page? root_path or user_signed_in?)
			#wrapper_navigation
				#navigation
					%ul#nav
						%li{:class => events_selected? }= link_to 'events', root_path
						%li{:class => riders_selected? }= link_to 'riders', users_path
						%li{:class => selected?(about_path) }= link_to 'about', about_path
						%li{:class => selected?(contact_path) }= link_to 'contact', contact_path
		- if show_splash?
			#wrapper_splash
				#splash
					=render :partial => 'home/splash'
			#info
				=render :partial => 'home/info'
		#main_content
			= yield :sidebar_left
			#content
				= yield
			= yield :sidebar_right
		#wrapper_footer
			#footer
				= yield :scripts