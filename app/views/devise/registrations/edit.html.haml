%h2="Edit #{resource_name.to_s.humanize}"

=semantic_form_for(@user) do |f|
	= f.semantic_errors
	= f.inputs do
		= f.input :nickname, :input_html => {:placeholder => "Enter a name for the Event ( example: Friday boarding in Retiro! )" }
		= f.input :name
		= f.input :default_city
		= f.input :birthdate
		= f.input :bio, :input_html => {:rows => 4, :placeholder => "Tell us something about you :)"}
		= f.input :quiver, :input_html => {:rows => 6, :placeholder => "What do you use for riding?"}
		
	= f.buttons
%h3 Cancel my account

%p=raw("Unhappy? Tired of meeting nice people for riding with your longboard? #{link_to 'Cancel your account', registration_path(resource_name), :confirm => 'Are you sure?', :method => :delete}") 

